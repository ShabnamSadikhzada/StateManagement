@{
    ViewData["Title"] = "Home Page";
}

@{
    string[] languages = { "C#", "Java", "Python", "JavaScript", "TypeScript", "PHP", "Swift", "Kotlin" };
}

@model string

@if (Model is not null)
{
    <div class="row mt-5">
        <div class="col"> 
            <h1 class="display-1">Kullandiginiz yazilim dili</h1>
            <hr />
            <h1 class="display-4 text-center rounded shadow-sm bg-warning p-3">@Model</h1>
            <p>Yeni bir secim icin (clear) <a class="btn btn-sm btn-link" asp-action="clear">tiklayiniz</a></p>
            <p>Yeni bir secim icin (delete) <a class="btn btn-sm btn-link" asp-action="clear">tiklayiniz</a></p>
        </div>
    </div>
}
else
{
   
    <div class="row mt-5">
        <div class="col">
            <h1 class="display-4 border-bottom pb-2">Hangi proglama dilini kullaniyorsunuz ?</h1>
            <hr />
        </div>
    </div>

    <form asp-action="index">
        <div class="row row-cols-4">

                @foreach (string lang in languages)
                {
                    <div class="col mb-5 mt-2">

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="@lang" name="survey" id="@lang"/>
                            <label for="@lang" class="form-check-label">@lang</label>
                        </div>
                    </div>
                }

                <div class="col-12">
                    <button class="btn btn-outline-dark mt-5 float-end btn-sm">Onayla</button>
                </div>
        </div>
</form>

}